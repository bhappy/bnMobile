<h2><%= text %></h2>
<div id="wrapper" class="recommendations">
  <div id="scroller">
  <ul>
    <% @results.each do |p| %>
      	<li>
      	  <a href="<%= product_path(p.attr('u')) %>"><img src="<%= p.xpath("a[@n=\"#{THUMBNAIL}\"]").attr('v').value %>"></a>
		  <div class="clear"></div>
		  <%= link_to p.xpath("a[@n=\"#{TITLE}\"]").attr('v').value, product_path(p.attr('u')) %>
		  <p class="price"><%= p.xpath("a[@n=\"#{PRICE}\"]").attr('v').value %></p>
  		  <span class="rating-static rating-<%= (6 + rand(5))*5 %>"></span>
		</li>
    <% end %>
  </ul>
  </div>
</div>

<script type="text/javascript">
var myScroll = new iScroll('wrapper');
</script>
